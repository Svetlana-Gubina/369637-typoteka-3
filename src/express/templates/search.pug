doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(name='description' content='Личный блог Типотека')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Типотека
    link(rel='preload' href='./fonts/Inter-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='./fonts/Inter-Medium.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='./fonts/SFProDisplay-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='stylesheet' href='css/style.min.css')
  body
    .wrapper-color
      include partials/search-header.pug
      block search-content
        main
          section.search-page
            .search-page__wrapper
              h1 Поиск
              .search.search-page__form
                form(action='#' method='get')
                  label
                    input(type='text' name='query' placeholder='Что ищем?')
                  button.search__button.button.button--transparent(type='submit') Найти
      include partials/footer.pug
    script(src='js/vendor.js')
    script(src='js/main.js')
